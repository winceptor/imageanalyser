
<% layout('layout') -%>

<div class="container">

    <div class="jumbotron text-center">
		<h1><span class="fa fa-search"></span> Viewing Instagram</h1>
		
		<% if ( (typeof data != "undefined") && data) { %>
			<% if (data.length>0) { %>
				<div class="images text-center row">
					<% for (var i=0;i<data.length;i++) { var entry = data[i]; if (typeof entry != "undefined") { %>
						
							<div class="col-sm-6 vertical-spacing mappable">
								<a href="/view_ig_single?id=<%= entry.id %>" >
									<img class="img-rounded img-responsive" src="<%= entry.images.standard_resolution.url %>" alt="<%= entry.caption.text %>" style="width:100%;">
								</a>
							</div>
						
					<% } } %>
				</div>
			<% } %>
					
		<% } else { %>
			<div class="alert alert-danger">Error!</div>
		<% } %>
	</div>
	
	<div class="json" style="display: none;">
		<%= JSON.stringify(data) %>
	</div>

</div>

<div class="container">
    <div class="jumbotron text-center">
    	<a href="/" class="btn btn-default">Home</a>
    </div>
</div>